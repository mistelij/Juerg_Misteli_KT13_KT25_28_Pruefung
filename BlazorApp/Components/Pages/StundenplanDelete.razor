@page "/stundenplan/delete"
@page "/stundenplan/delete/{Id:int}"
@rendermode InteractiveServer

@using BlazorApp.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<MyDbContext> DbFactory
@inject NavigationManager Nav

<PageTitle>Stundenplan - Löschen</PageTitle>

<h1>Stundenplan (Löschen)</h1>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">@_error</div>
}
@if (!string.IsNullOrWhiteSpace(_success))
{
    <div class="alert alert-success" role="alert">@_success</div>
}

@if (_isLoading)
{
    <p><em>Lade Daten…</em></p>
}
else
{
    <div class="card">
        <div class="card-header">
            <strong>Eintrag auswählen und löschen</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Datum</th>
                            <th>Uhrzeit</th>
                            <th>Klasse</th>
                            <th>Lehrer</th>
                            <th>Zimmer</th>
                            <th>ID</th>
                            <th class="text-end">Aktion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (_entries.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <em>Keine Einträge vorhanden.</em>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var e in _entries)
                            {
                                <tr>
                                    <td>@e.Datum.ToString("dd.MM.yyyy")</td>
                                    <td>@e.Uhrzeit.ToString("HH\\:mm")</td>
                                    <td>@e.Klassen?.KlassenName</td>
                                    <td>@e.Lehrer?.LehrerName</td>
                                    <td>@e.Zimmer?.ZimmerBezeichnung</td>
                                    <td>@e.StundenplanId</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => SelectForDelete(e.StundenplanId)">
                                            Auswählen
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (_selectedId is not null && _selectedEntry is not null)
    {
        <div class="alert alert-warning mt-3" role="alert">
            <div class="d-flex align-items-start gap-3">
                <div class="flex-grow-1">
                    <strong>Löschen bestätigen</strong>
                    <div class="mt-1">
                        Du willst löschen:
                        <br />
                        <span class="fw-semibold">ID:</span> @_selectedEntry.StundenplanId,
                        <span class="fw-semibold">Datum:</span> @_selectedEntry.Datum.ToString("dd.MM.yyyy"),
                        <span class="fw-semibold">Zeit:</span> @_selectedEntry.Uhrzeit.ToString("HH\\:mm"),
                        <span class="fw-semibold">Klasse:</span> @_selectedEntry.Klassen?.KlassenName,
                        <span class="fw-semibold">Lehrer:</span> @_selectedEntry.Lehrer?.LehrerName,
                        <span class="fw-semibold">Zimmer:</span> @_selectedEntry.Zimmer?.ZimmerBezeichnung
                    </div>
                </div>
                <div class="d-flex flex-column gap-2">
                    <button class="btn btn-danger" @onclick="ConfirmDeleteAsync" disabled="@_isDeleting">
                        Löschen bestätigen
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="CancelSelection" disabled="@_isDeleting">
                        Abbrechen
                    </button>
                </div>
            </div>
        </div>
    }

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-outline-dark" type="button" @onclick='() => Nav.NavigateTo("/stundenplan/read")'>
            Zur Anzeige
        </button>
        <button class="btn btn-outline-secondary" type="button" @onclick="ReloadAsync">
            Aktualisieren
        </button>
    </div>
}

@code {
    [Parameter] public int? Id { get; set; }

    private bool _isLoading = true;
    private bool _isDeleting = false;
    private string? _error;
    private string? _success;

    private List<Stundenplan> _entries = new();
    private int? _selectedId;
    private Stundenplan? _selectedEntry;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id is not null)
        {
            await SelectForDeleteAsync(Id.Value, navigate: false);
        }
    }

    private async Task ReloadAsync()
    {
        _error = null;
        _isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            _entries = await db.Stundenplans
                .Include(x => x.Lehrer)
                .Include(x => x.Klassen)
                .Include(x => x.Zimmer)
                .OrderBy(x => x.Datum)
                .ThenBy(x => x.Uhrzeit)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Laden: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void SelectForDelete(int id) => _ = SelectForDeleteAsync(id);

    private async Task SelectForDeleteAsync(int id, bool navigate = true)
    {
        _error = null;
        _success = null;

        if (navigate)
        {
            Nav.NavigateTo($"/stundenplan/delete/{id}");
        }
        _selectedId = id;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            _selectedEntry = await db.Stundenplans
                .Include(x => x.Lehrer)
                .Include(x => x.Klassen)
                .Include(x => x.Zimmer)
                .AsNoTracking()
                .FirstOrDefaultAsync(x => x.StundenplanId == id);

            if (_selectedEntry is null)
            {
                _error = "Eintrag wurde nicht gefunden (evtl. bereits gelöscht).";
                _selectedId = null;
                await ReloadAsync();
            }
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Laden des Eintrags: {ex.Message}";
        }
    }

    private void CancelSelection()
    {
        _error = null;
        _success = null;
        _selectedId = null;
        _selectedEntry = null;
        Nav.NavigateTo("/stundenplan/delete", forceLoad: false);
    }

    private async Task ConfirmDeleteAsync()
    {
        _error = null;
        _success = null;
        if (_selectedId is null)
            return;

        _isDeleting = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var entity = await db.Stundenplans.FirstOrDefaultAsync(x => x.StundenplanId == _selectedId.Value);
            if (entity is null)
            {
                _error = "Eintrag wurde nicht gefunden (evtl. bereits gelöscht).";
                CancelSelection();
                await ReloadAsync();
                return;
            }

            db.Stundenplans.Remove(entity);
            await db.SaveChangesAsync();

            _success = $"Eintrag gelöscht (ID: {_selectedId.Value}).";
            CancelSelection();
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Löschen: {ex.Message}";
        }
        finally
        {
            _isDeleting = false;
        }
    }
}


