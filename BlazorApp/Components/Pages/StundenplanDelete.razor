@page "/stundenplan/delete"
@page "/stundenplan/delete/{Id:int}"
@rendermode InteractiveServer

@using BlazorApp.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<MyDbContext> DbFactory
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>Stundenplan - Löschen</PageTitle>

<h1>Stundenplan (Löschen)</h1>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">@_error</div>
}
@if (!string.IsNullOrWhiteSpace(_success))
{
    <div class="alert alert-success" role="alert">@_success</div>
}

@if (_isLoading)
{
    <p><em>Lade Daten…</em></p>
}
else
{
    <div class="card">
        <div class="card-header">
            <strong>Eintrag auswählen und löschen</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Datum</th>
                            <th>Uhrzeit</th>
                            <th>Klasse</th>
                            <th>Lehrer</th>
                            <th>Zimmer</th>
                            <th>ID</th>
                            <th class="text-end">Aktion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (_entries.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <em>Keine Einträge vorhanden.</em>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var e in _entries)
                            {
                                <tr>
                                    <td>@e.Datum.ToString("dd.MM.yyyy")</td>
                                    <td>@e.Uhrzeit.ToString("HH\\:mm")</td>
                                    <td>@e.Klassen?.KlassenName</td>
                                    <td>@e.Lehrer?.LehrerName</td>
                                    <td>@e.Zimmer?.ZimmerBezeichnung</td>
                                    <td>@e.StundenplanId</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => AskDelete(e.StundenplanId)">
                                            Löschen
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-outline-dark" type="button" @onclick='() => Nav.NavigateTo("/stundenplan/read")'>
            Zur Anzeige
        </button>
        <button class="btn btn-outline-secondary" type="button" @onclick="ReloadAsync">
            Aktualisieren
        </button>
    </div>
}

@code {
    [Parameter] public int? Id { get; set; }

    private bool _isLoading = true;
    private string? _error;
    private string? _success;

    private List<Stundenplan> _entries = new();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id is not null)
        {
            await AskDeleteAsync(Id.Value, navigate: false);
        }
    }

    private async Task ReloadAsync()
    {
        _error = null;
        _isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            _entries = await db.Stundenplans
                .Include(x => x.Lehrer)
                .Include(x => x.Klassen)
                .Include(x => x.Zimmer)
                .OrderBy(x => x.Datum)
                .ThenBy(x => x.Uhrzeit)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Laden: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void AskDelete(int id) => _ = AskDeleteAsync(id);

    private async Task AskDeleteAsync(int id, bool navigate = true)
    {
        _error = null;
        _success = null;

        if (navigate)
        {
            Nav.NavigateTo($"/stundenplan/delete/{id}");
        }

        var ok = await JS.InvokeAsync<bool>("confirm", $"Eintrag (ID: {id}) wirklich löschen?");
        if (!ok)
            return;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var entity = await db.Stundenplans.FirstOrDefaultAsync(x => x.StundenplanId == id);
            if (entity is null)
            {
                _error = "Eintrag wurde nicht gefunden (evtl. bereits gelöscht).";
                await ReloadAsync();
                return;
            }

            db.Stundenplans.Remove(entity);
            await db.SaveChangesAsync();
            _success = $"Eintrag gelöscht (ID: {id}).";
            await ReloadAsync();
            Nav.NavigateTo("/stundenplan/delete", forceLoad: false);
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Löschen: {ex.Message}";
        }
    }
}


