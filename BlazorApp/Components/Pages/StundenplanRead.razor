@page "/stundenplan/read"
@rendermode InteractiveServer

@using BlazorApp.Models
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<MyDbContext> DbFactory

<PageTitle>Stundenplan - Anzeige</PageTitle>

<h1>Stundenplan (Anzeige)</h1>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">@_error</div>
}

@if (_isLoading)
{
    <p><em>Lade Daten…</em></p>
}
else
{
    <div class="card">
        <div class="card-header">
            <strong>Alle Stundenplaneinträge</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Datum</th>
                            <th>Uhrzeit</th>
                            <th>Klasse</th>
                            <th>Lehrer</th>
                            <th>Zimmer</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (_entries.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <em>Keine Einträge vorhanden.</em>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var e in _entries)
                            {
                                <tr>
                                    <td>@e.Datum.ToString("dd.MM.yyyy")</td>
                                    <td>@e.Uhrzeit.ToString("HH\\:mm")</td>
                                    <td>@e.Klassen?.KlassenName</td>
                                    <td>@e.Lehrer?.LehrerName</td>
                                    <td>@e.Zimmer?.ZimmerBezeichnung</td>
                                    <td>@e.StundenplanId</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private bool _isLoading = true;
    private string? _error;
    private List<Stundenplan> _entries = new();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        _error = null;
        _isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            _entries = await db.Stundenplans
                .Include(x => x.Lehrer)
                .Include(x => x.Klassen)
                .Include(x => x.Zimmer)
                .OrderBy(x => x.Datum)
                .ThenBy(x => x.Uhrzeit)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Laden: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}


